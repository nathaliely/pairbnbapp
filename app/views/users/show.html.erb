<h1>Email: <%= @user.email %></h1>

<%= link_to "Edit", edit_user_path(@user) %>

<h2>Bookings</h2>
<table>
<tr>
  <th>Listing Title</th>
  <th>Start Date</th>
  <th>End Dates</th>
  <th>Num_guests</th>
  <th>Total_price</th>
  <th>Action</th>
</tr>

<% @bookings.each do |booking| %>
<tr>
  <td><%= link_to booking.listing.title, booking.listing  %></td>
  <td><%= booking.start_date.strftime('%d,%B,%Y') %></td>
  <td><%= booking.end_date.strftime('%d,%B,%Y') %></td>
  <td><%= booking.num_guests %></td>
  <td><%= booking.total_price %></td>
  <td><%= link_to "Cancel Booking", booking_path(booking), method: :delete %></td>
  <td><%= link_to "Pay", new_booking_payment_path(booking) %></td>
</tr>
<% end %>
</table>
