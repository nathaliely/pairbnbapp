<%= link_to "Create New Listing", new_listing_path, class: 'btn btn-primary' %>

  <% @listings.each do |listing| %>
    <div class="row">
      <div class="col-md-4 col-md-offset-2 col-xs-4 col-xs-offset-2">
        <h3 class="text-center">
          <%= link_to listing.title, listing_path(listing) %>
        </h3>
      </div>
      <div class="col-md-4 col-xs-4">
        <% if listing.images.empty? %>
          <h3 class="text-center">
            No Image Available
          </h3>
        <% else %>
          <%= image_tag listing.images.first.thumb %>
        <% end %>
      </div>
    </div>
  <% end %>
<%= paginate @listings %>
