<%= form_for [@listing, @booking] do |f| %>
<% if errors.present? %>
<div>
  <%= @errors %>
</div>
<%end %>
<div>
  <%= f.label :num_guests %>
  <%= f.number_field :num_guests %>
</div>

<div>
  <%= f.label :start_date %>
  <%= f.date_field :start_date %>
</div>

<div>
  <%= f.label :end_date %>
  <%= f.date_field :end_date %>
</div>
<p>
<% f.submit "Submit Booking" %>
</p>
<% end %>
