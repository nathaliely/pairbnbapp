<h2>Payment Page</h2>

<%= form_for [@booking, @payment] do |f| %>

  <div class="field">
    <h2><%= @booking.listing.title %></h2>
  </div>

  <div class="lead">
    <%= f.label :from %><br>
    <%= @booking.start_date %>
  </div>

  <div class="lead">
    <%= f.label :until %><br>
    <%= @booking.end_date %>
  </div>

  <div class="lead">
    <%= f.label :Total %><br>
    <span class="label label-warning">RM <%= @booking.total_price %> </span>
  </div>

  <div class="field">
    <%= f.hidden_field :reservation_id, value: @booking.id %>
  </div>

  <div class="field">
    <%= f.hidden_field :total_price, value: @booking.total_price %>
  </div>

  <div class="field">
    <div id="dropin"></div>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Pay Now", class: "btn btn-danger"%>
  </div>
<% end %>

<script src="https://js.braintreegateway.com/js/braintree-2.22.2.min.js"></script>
<script>
 braintree.setup("<%=@client_token%>", "dropin", {
   container: "dropin"
 });
</script>
